<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/settings">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="verbose"
            android:summary="@string/enable_log_summary"
            android:title="@string/enable_log" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="popup_bars"
            android:summary="@string/popup_bars_summary"
            android:title="@string/popup_bars" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="sort_search_result"
            android:summary="@string/sort_search_result_summary"
            android:title="@string/sort_search_result" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="classify_chapter"
            android:summary="@string/classify_chapter_summary"
            android:title="@string/classify_chapter" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="split_linked_page"
            android:summary="@string/split_linked_page_summary"
            android:title="@string/split_linked_page" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/version">
        <Preference
            android:key="version_name"
            android:title="version" />
        <Preference
            android:key="sited_version"
            android:title="@string/sited_detail" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/disclaimer">
        <Preference
            android:summary="@string/only_for_testing_purposes"
            android:title="@string/test_only" />
        <Preference
            android:summary="https://github.com/Goshin/Buka-Darkness"
            android:title="@string/source_code">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://github.com/Goshin/Buka-Darkness" />
        </Preference>
        <Preference
            android:summary="@string/publish_under_GPLv3"
            android:title="@string/GNU_public_license" />
    </PreferenceCategory>

</PreferenceScreen>